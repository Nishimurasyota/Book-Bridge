<div class="low">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="col-xs-9 col-xs-offset-1">
    <p><font color="red"><%= flash[:notice] %></font></p>
    <font color="red"><%= alert %></font>
    <h2>パスワードを忘れた方</h2>
    <table class="table table-bordered">
      <tr>
        <th class="info">メールアドレス</th>
        <th>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",:size => "50*30" %>
          </div>
        </th>
      </tr>
    </table>
  <div class="row">
    <div class="actions col-xs-3 col-xs-offset-4">
      <%= f.submit "送信",class:"btn btn-primary btn-block" %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <% end %>
  </div>
</div>