<table class='table table-hover table-inverse'>
  <thead>
    <tr class="info">
      <th>本のタイトル</th>
      <th>著者名</th>
      <th>ジャンル</th>
      <th>ジャンル</th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr>
        <% book.reviews do |r| %>
        <td><%= link_to(r.user) do %>
          <%= attachment_image_tag(r.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <% end %>
        <td><%= link_to book.name, book_path(book.id) %></td>
        <td>
          <%= render 'books/author_list', author_list: book.author_list do %>
          <%= book.author_list %>
          <% end %>
        </td>
        <td>
          <%= render 'books/genre_list', genre_list: book.genre_list do %>
          <%= book.genre_list %>
          <% end %>
        </td>
        <td>
          <%= render 'books/tag_list', tag_list: book.tag_list do %>
          <%= book.tag_list %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>