<div class="low">
  <div class="col-xs-10 col-xs-offset-1">
    <%= form_for(@review, url: book_review_path) do |r| %>
    <table class="table table-bordered table-hover">
      <tr>
        <th class="info"><%= r.label :タイトル %></th>
        <th><%= r.text_field :title %></th>
      </tr>
      <tr>
        <th class="info"><%= r.label :本文 %></th>
        <th><%= r.text_area :text,:size => "90*5" %></th>
      </tr>
    </table>
      <%= r.submit "更新",class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>
</div>

