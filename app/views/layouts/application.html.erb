<!DOCTYPE html>
<html>
  <head>
    <title>BookBridge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <%# headerの記載 %>
    <header class="navbar navbar-fixed-top" style="background-color: #99FF33;">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Book-Bridge</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <!--if文でサインインとアウト時の表示を変更-->
            <% if user_signed_in? %>
            <li><%= link_to current_user.name, user_path(current_user.id) %></li>
            <li><%= link_to ' 新規投稿', new_book_path, class: 'glyphicon glyphicon-pencil 新規投稿' %></li>
            <li><%= link_to ' ユーザー一覧', users_path, class: 'glyphicon glyphicon-user ユーザー一覧' %></li>
            <li><%= link_to ' Book一覧', books_path, class: 'glyphicon glyphicon-book Book一覧' %></li>
            <li><%= link_to ' logout', destroy_user_session_path,
                    method: :delete, class: 'glyphicon glyphicon-log-out logout'
                %>
            </li>
            <% else %>
            <li class="guest">こんにちはゲストさん</li>
            <li><%= link_to ' home', root_path, class: 'glyphicon glyphicon-home home' %></li>
            <li><%= link_to ' sign up', new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
            <li><%= link_to ' login', new_user_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
            <% end %>
          </ul>
        </nav>
      </div>
        <% if user_signed_in? %>
          <div class="search">
          <%= search_form_for(@search, url:book_search_path) do |f| %>
            <%= f.label :本のタイトル %>
            <%= f.search_field :name_cont, placeholder: '本のタイトルで検索' %>
            <%= f.label :著者名 %>
            <%= f.search_field :authors_name_cont, placeholder: '著者名で検索' %>
            <%= f.label :ジャンル %>
            <%= f.search_field :genres_name_cont, placeholder: 'ジャンルで検索' %>
            <%= f.label :タグ %>
            <%= f.search_field :tags_name_cont, placeholder: 'タグで検索' %>
            <%= f.submit '検索',class: "btn btn-primary btn-sm" %>
          <% end %>
          </div>
        <% end %>
    </header>
  <%# headerの記載 %>
  <body>
    <div class="container">
      <%= yield %>
    </div>
  </body>
  <footer>
    <div class="container">
      <footer class="nav navbar-nav navbar-right">
        <%= link_to "当サイトについて", about_path %>
      </footer>
    </div>
  </footer>
</html>
