<div class="container">
  <div class="low">
    <div class="col-xs-6">
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td class="success">本のタイトル</td>
          <td><%= @book.name %></td>
        </tr>
        <tr>
          <td class="success">著者名</td>
          <td><%= @book.author.name %></td>
        </tr>
        <tr>
          <% if @book.favorited_by?(current_user) %>
            <td><li>
            <%= link_to book_favorites_path(@book, redirect_id: 0), method: :delete do %>
            <i class="glyphicon glyphicon-folder-close" aria-hidden="true" style="color: red;"></i>
            <% end %>
            </li></td>
          <% else %>
            <td><li>
            <%= link_to book_favorites_path(@book, redirect_id: 0), method: :post do %>
            <i class="glyphicon glyphicon-folder-close" aria-hidden="true"></i>
            <% end %>
            </li></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
  <%# レビュー一覧表示%>
  <div class="low">
    <div class="col-xs-9">
    <h2>レビュー一覧</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ユーザー</th>
          <th>レビュー</th>
        </tr>
      </thead>
      <tbody>
        <% @book.reviews.each do |r| %>
        <tr>
          <td>
            <%= attachment_image_tag(r.user, :image, :fill, 100, 100,
                format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg") %>
            <%= r.user.name%>
          </td>
          <td><%= link_to book_review_path(r) do %>
            <%= r.title %><% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
  <%# レビュー一覧表示%>
</div>

