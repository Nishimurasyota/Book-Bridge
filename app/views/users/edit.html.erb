<div class="low">
<div class="user">プロフィール編集ページ</div>
  <% if @user.errors.any? %>
    <h3><font color="red"><%= @user.errors.count %>点の記入漏れがあります</font></h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><font color="red"><%= message %></font></li>
      <% end %>
    </ul>
  <% end %>
  <%= attachment_image_tag(@user, :image, :fill, 100, 100, format: 'jpeg',
      class: "img-circle pull-left profile-img", fallback: "no_image.jpg") %>
  <%= form_for(@user) do |u| %>
  <div class="user_table">
    <div class="col-xs-3">
      <table class="table">
          <tr><td><%= u.label :プロフィール画像 %></td></tr>
          <tr><td><%= u.attachment_field :image %></td></tr>
      </table>
    </div>
    <div class="col-xs-9">
      <div class="edit">
      <table class="table table-hover table-inverse">
        <tr>
          <th class="info"><%= u.label :ユーザー名 %></th>
          <th><%= u.text_field :name, :placeholder=> "2~20文字以内で記入してください",
                  size: "30x2"
              %>
          </th>
        </tr>
        <tr>
          <th class="info"><%= u.label :紹介文 %></th>
          <th>
            <%= u.text_area :introduction,
                :placeholder => "文字数の上限は50文字です",
                size: "90x5"
            %>
          </th>
        </tr>
      </table>
        <%= u.submit "更新",class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
    </div>
  </div>
</div>