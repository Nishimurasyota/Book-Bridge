<div class="low">
  <div class="user">マイリスト一覧</div>
  <div class="user_table">
  <table class="table table-hover table-inverse">
    <thead>
      <tr class="head">
        <th>タイトル</th>
        <th>著者名</th>
        <th>ジャンル</th>
        <th>タグ</th>
      </tr>
    </thead>
    <% @favorites.each do |f| %>
      <% book = Book.find(f.book_id) %>
      <tbody>
        <tr class="body">
          <td><%= book.name %></td>
          <td>
            <%= render 'books/tag_list', tag_list: book.author_list do %>
            <%= book.author_list %>
            <% end %>
          </td>
          <td>
            <%= render 'books/tag_list', tag_list: book.genre_list do %>
            <%= book.genre_list %>
            <% end %>
          </td>
          <td>
            <%= render 'books/tag_list', tag_list: book.tag_list do %>
            <%= book.tag_list %>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>