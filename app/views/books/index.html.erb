<div class="low">
  <div class="book_index_title">本の一覧ページ</div>
  <div class="book_index">
  <%= page_entries_info @books %>
  <table class="table table-hover table-inverse">
    <thead>
      <tr class="info">
        <th>本のタイトル</th>
        <th>著者名</th>
        <th>ジャンル</th>
        <th>タグ</th>
      </tr>
    </thead>
    <% @books.each do |f| %>
    <tbody>
      <tr>
        <td>
          <%= link_to (f) do %>
            <%= f.name %>
          <% end %>
        </td>
        <td>
          <%= render 'books/author_list', author_list: f.author_list do %>
          <%= f.author_list %>
          <% end %>
        </td>
        <td>
          <%= render 'books/genre_list', genre_list: f.genre_list do %>
          <%= f.genre_list %>
          <% end %>
        </td>
        <td>
          <%= render 'books/tag_list', tag_list: f.tag_list do %>
          <%= f.tag_list %>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  </div>
  <div class ="paginate">
    <%= paginate @books, theme: 'custom_theme' %>
  </div>
</div>
