<!DOCTYPE html>
<html>
  <head>
    <title>BookBridge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <%# headerの記載 %>
    <header class="navbar navbar-fixed-top">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Book-Bridge</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <!--if文でサインインとアウト時の表示を変更-->
            <% if user_signed_in? %>
            <li><%= link_to current_user.name, user_path(current_user.id) %></li>
            <li><%= link_to ' 新規投稿', new_book_path, class: 'glyphicon glyphicon-pencil 新規投稿' %></li>
            <li><%= link_to ' ユーザー一覧', users_path, class: 'glyphicon glyphicon-user ユーザー一覧' %></li>
            <li><%= link_to ' 本の一覧', books_path, class: 'glyphicon glyphicon-book Book一覧' %></li>
            <li><%= link_to ' ログアウト', destroy_user_session_path,
                    method: :delete, class: 'glyphicon glyphicon-log-out logout'
                %>
            </li>
            <% else %>
            <li class="guest">こんにちはゲストさん</li>
            <li><%= link_to ' トップページ', root_path, class: 'glyphicon glyphicon-home home' %></li>
            <li><%= link_to ' 新規登録', new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
            <li><%= link_to ' ログイン', new_user_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
            <% end %>
          </ul>
        </nav>
      </div>
        <div id="sp-menu">
          <h2>MENU</h2>
          <% if user_signed_in? %>
            <li><%= link_to current_user.name, user_path(current_user.id) %></li>
            <li><%= link_to ' 新規投稿', new_book_path, class: 'glyphicon glyphicon-pencil 新規投稿' %></li>
            <li><%= link_to ' ユーザー一覧', users_path, class: 'glyphicon glyphicon-user ユーザー一覧' %></li>
            <li><%= link_to ' 本の一覧', books_path, class: 'glyphicon glyphicon-book Book一覧' %></li>
            <li><%= link_to ' ログアウト', destroy_user_session_path,
                    method: :delete, class: 'glyphicon glyphicon-log-out logout'
                %>
            </li>
          <% else %>
            <li><%= link_to 'トップページ', root_path, class: 'glyphicon glyphicon-home home' %></li>
            <li><%= link_to '新規登録', new_user_registration_path, class: 'glyphicon glyphicon-edit sign_up' %></li>
            <li><%= link_to 'ログイン', new_user_session_path, class: 'glyphicon glyphicon-log-in sign_in' %></li>
          <% end %>
      <% if user_signed_in? %>
      <div class="search">
        <%= search_form_for(@search, url:book_search_path) do |f| %>
          <div class="tag"><%= f.label :本のタイトル %></div>
          <%= f.search_field :name_cont, placeholder: '本のタイトルで検索' %>
          <div class="tag"><%= f.label :著者名 %></div>
          <%= f.search_field :authors_name_cont, placeholder: '著者名で検索' %><br>
          <div class="tag"><%= f.label :ジャンル %></div>
          <%= f.search_field :genres_name_cont, placeholder: 'ジャンルで検索' %>
          <div class="tag"><%= f.label :タグ %></div>
          <%= f.search_field :tags_name_cont, placeholder: 'タグで検索' %><br>
          <%= f.submit '検索',class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
      <% end %>
        </div>

      <div id="hm-icon">
        <a class="menu-trigger" href="#">
          <span></span>
          <span></span>
          <span></span>
        </a>
      </div>


    </header>
    <%# headerの記載 %>
    <body>
      <div class="container">
        <%= yield %>
      </div>
    </body>
    <%# footerの記載%>
    <footer>
      <div class="container">
        <footer class="nav navbar-nav navbar-right">
          <%= link_to "当サイトについて", about_path %>
        </footer>
      </div>
    </footer>
    <%# footerの記載%>
</html>
