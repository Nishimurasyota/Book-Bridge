<% if @book.favorited_by?(current_user) %>
  <%= link_to "お気に入りから外す", book_favorites_path(@book),
    method: :delete,class: "btn btn-danger btn-sm", remote: true %>
<% else %>
  <%= link_to "お気に入りに追加", book_favorites_path(@book),
    method: :post ,class: "btn btn-primary btn-sm", remote: true %>
<% end %>