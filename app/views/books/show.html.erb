<div class="low">
  <div class="col-xs-9 col-xs-offset-2">
  <table class="table table-hover table-inverse">
    <tbody>
      <tr>
        <td class="info">本のタイトル</td>
        <td><%= @book.name %></td>
      </tr>
      <tr>
        <td class="info">著者名</td>
        <td><%= @book.author_list %></td>
      </tr>
    </tbody>
  </table>
        <% if @book.favorited_by?(current_user) %>
          <%= link_to "マイリストから外す",
              book_favorites_path(@book, redirect_id: 0),
              method: :delete,class: "btn btn-danger btn-sm"
          %>
        <% else %>
          <%= link_to "マイリストに追加",
              book_favorites_path(@book, redirect_id: 0),
              method: :post,class: "btn btn-primary btn-sm"
          %>
        <% end %>
  </div>
</div>
<%# レビュー一覧表示%>
<div class="low">
  <div class="col-xs-9 col-xs-offset-2">
  <h2>レビュー一覧</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr class="info">
        <th>ユーザー</th>
        <th>レビュー</th>
      </tr>
    </thead>
    <tbody>
      <% @book.reviews.each do |r| %>
      <tr>
        <td>
          <%= link_to user_path(r.user.id) do %>
            <%= attachment_image_tag(r.user, :image, :fill, 100, 100,
                format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg") %>
            <%= r.user.name%>
          <% end %>
        </td>
        <td><%= link_to book_review_path(r) do %>
          <%= r.title %><% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
