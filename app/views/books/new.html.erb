<div class="low">
  <%= form_for @book do |f| %>
      <%= f.label :本のタイトル %><br>
      <%= f.text_field :name %><br>
      <%= f.label :著者名 %><br>
      <%= f.text_field :author_list, value: @book.author_list.join(',') %><br>
      <%= f.label :ジャンル %><br>
      <%= f.text_area :genre_list, value: @book.genre_list.join(',') %><br>
      <%= f.label :タグ %><br>
      <%= f.text_field :tag_list, value: @book.tag_list.join(',') %>
      <%= fields_for @review do |r| %><br>
        <%= r.label :レビュータイトル %><br>
        <%= r.text_field :title %><br>
        <%= r.label :本文 %><br>
        <%= r.text_area :text %><br>
      <% end %>
    <%= f.submit "投稿"%>
  <% end %>
</div>
